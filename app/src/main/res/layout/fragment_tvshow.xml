<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/text_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Presentation folder of the show"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Titulo"
        android:textColor="#FF9900"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@id/poster_image"
        app:layout_constraintTop_toBottomOf="@id/poster_image" />

<!--    <TextView-->
<!--        android:id="@+id/vote_average"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="24dp"-->
<!--        android:text="8,5"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textSize="16sp"-->
<!--        app:layout_constraintEnd_toEndOf="@id/poster_image"-->
<!--        app:layout_constraintTop_toBottomOf="@id/title" />-->

    <TextView
        android:id="@+id/first_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:text="2017-12-08"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/poster_image"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <RatingBar
        android:id="@+id/vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:theme="@style/RatingBar"
        android:numStars="5"
        android:stepSize="0.1"
        app:layout_constraintEnd_toEndOf="@id/poster_image"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
